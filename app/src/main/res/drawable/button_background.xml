<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"  >
        <shape>
            <solid android:color="@color/buttonBackgroundPressed" />
            <corners android:radius="@dimen/buttonRadius" />
            <padding
                android:left="@dimen/buttonPadding"
                android:right="@dimen/buttonPadding"
                android:top="@dimen/buttonPadding"
                android:bottom="@dimen/buttonPadding" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/buttonBackground" />
            <corners android:radius="@dimen/buttonRadius" />
            <padding
                android:left="@dimen/buttonPadding"
                android:right="@dimen/buttonPadding"
                android:top="@dimen/buttonPadding"
                android:bottom="@dimen/buttonPadding" />
        </shape>
    </item>


</selector>